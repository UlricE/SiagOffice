Xfiler*popup form.bitmap.left:		ChainLeft
Xfiler*popup form.bitmap.right:		ChainLeft
Xfiler*popup form.bitmap.bottom:	ChainTop

Xfiler*popup form*label.borderWidth : 0
Xfiler*popup form.label.top:		ChainTop
Xfiler*popup form.label.left:		ChainLeft
Xfiler*popup form.label.right:		ChainLeft
Xfiler*popup form.label.bottom:		ChainTop

Xfiler*button box.orientation: horizontal
Xfiler*button box.borderWidth: 0
Xfiler*button box.top:			ChainTop
Xfiler*button box.left:			ChainLeft
Xfiler*button box.right:		ChainLeft
Xfiler*button box.bottom:		ChainTop

Xfiler*viewport.borderWidth: 0
Xfiler*viewport.icon box*Label.borderWidth : 0
